<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_600dp"
    android:layout_height="@dimen/dimen_160dp"
    android:gravity="center"
    android:layout_marginStart="@dimen/dimen_10dp"
    android:orientation="horizontal">

    <ImageView
        android:src="@drawable/cctv_1"
        android:id="@+id/iv_live_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="CCTV-4 中文国际(亚)"
        android:id="@+id/tv_live_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/dimen_160dp"
        android:layout_gravity="center"
        android:focusable="false"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_40sp"
        android:gravity="center" />

</LinearLayout>